{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"--configuration",
				"Debug"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$msCompile"
		},
		{
			"label": "build-release",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"--configuration",
				"Release"
			],
			"group": "build",
			"problemMatcher": "$msCompile"
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"clean"
			],
			"group": "build",
			"problemMatcher": "$msCompile"
		},
		{
			"label": "run",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"src/ArtStudio.WPF"
			],
			"group": "build",
			"dependsOn": "build",
			"problemMatcher": "$msCompile"
		},
		{
			"label": "test",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"test"
			],
			"group": "test",
			"problemMatcher": "$msCompile"
		}
	]
}