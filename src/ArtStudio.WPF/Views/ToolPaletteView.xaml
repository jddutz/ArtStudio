<UserControl x:Class="ArtStudio.WPF.Views.ToolPaletteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="400"
        d:DesignWidth="200"
             Background="{StaticResource ArtStudio.Surface}">

    <materialDesign:Card Style="{StaticResource ArtStudio.PaletteCard}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="8">
                <!-- Tools Header -->
                <TextBlock Text="Tools"
                        Style="{StaticResource ArtStudio.HeaderText}"/>

                <!-- Tools List -->
                <ItemsControl ItemsSource="{Binding AvailableTools}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding}"
                                    Style="{StaticResource ArtStudio.ToolButton}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Separator Margin="0,16,0,8"/>

                <!-- Brush Settings Group -->
                <GroupBox Header="Brush Settings"
                        Style="{StaticResource ArtStudio.ToolGroup}">
                    <StackPanel>
                        <!-- Brush Size -->
                        <Grid Margin="0,0,0,8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Size"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Style="{StaticResource ArtStudio.SubheaderText}"/>
                            <TextBlock Text="10"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Style="{StaticResource ArtStudio.SubheaderText}"/>
                            <Slider Name="BrushSizeSlider"
                                    Grid.Row="1"
                                    Grid.ColumnSpan="2"
                                    Style="{StaticResource ArtStudio.ToolSlider}"
                                    Minimum="1"
                                    Maximum="100"
                                    Value="10"/>
                        </Grid>

                        <!-- Brush Opacity -->
                        <Grid Margin="0,0,0,8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Opacity"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Style="{StaticResource ArtStudio.SubheaderText}"/>
                            <TextBlock Text="100%"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Style="{StaticResource ArtStudio.SubheaderText}"/>
                            <Slider Name="OpacitySlider"
                                    Grid.Row="1"
                                    Grid.ColumnSpan="2"
                                    Style="{StaticResource ArtStudio.ToolSlider}"
                                    Minimum="0.1"
                                    Maximum="1.0"
                                    Value="1.0"/>
                        </Grid>

                        <!-- Color Picker -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Color"
                                    Grid.Row="0"
                                    Style="{StaticResource ArtStudio.SubheaderText}"/>
                            <Button Grid.Row="1"
                                    Height="40"
                                    Margin="0,4,0,0"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="Black"
                                    BorderBrush="{StaticResource ArtStudio.Border}"
                                    BorderThickness="2"
                                    ToolTip="Click to choose color"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </materialDesign:Card>
</UserControl>
