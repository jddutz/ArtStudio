<Application x:Class="ArtStudio.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:ArtStudio.WPF.Converters">
        <Application.Resources>
                <ResourceDictionary>
                        <ResourceDictionary.MergedDictionaries>
                                <!-- MaterialDesign base theme - this provides all the standard controls -->
                                <materialDesign:BundledTheme BaseTheme="Dark"
                                                             PrimaryColor="Blue"
                                                             SecondaryColor="Lime"/>

                                <!-- MaterialDesign defaults - essential control templates -->
                                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml"/>

                                <!-- ArtStudio customizations - override MaterialDesign colors and add custom styles -->
                                <ResourceDictionary Source="Resources/Colors.xaml"/>
                                <ResourceDictionary Source="Resources/Typography.xaml"/>
                                <ResourceDictionary Source="Resources/Styles.xaml"/>
                        </ResourceDictionary.MergedDictionaries>

                        <!-- Converters -->
                        <local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
                </ResourceDictionary>
        </Application.Resources>
</Application>
