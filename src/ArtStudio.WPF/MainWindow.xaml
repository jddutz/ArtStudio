<Window x:Class="ArtStudio.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:ArtStudio.WPF.Views"
        mc:Ignorable="d"
        Title="ArtStudio"
        Height="800"
        Width="1200"
        WindowState="Maximized"
        Background="{StaticResource ArtStudio.Background}"
        TextElement.Foreground="{StaticResource ArtStudio.OnBackground}"
        FontFamily="Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <views:MainMenuControl Grid.Row="0"
                               DataContext="{Binding}"/>

        <!-- Main Content Area with Toolbar and Docking -->
        <views:WorkspaceContentControl x:Name="workspaceContent"
                                       Grid.Row="1"
                                       DataContext="{Binding}"/>

        <!-- Status Bar -->
        <views:StatusBarControl Grid.Row="2"
                                DataContext="{Binding}"/>
    </Grid>
</Window>
