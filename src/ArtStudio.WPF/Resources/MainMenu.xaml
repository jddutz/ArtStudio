<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

  <!-- Main Menu Bar Template -->
  <Menu x:Key="ArtStudioMainMenu"
        Style="{StaticResource ArtStudio.Menu}">
    <!-- File Menu -->
    <MenuItem Header="_File">
      <MenuItem Header="_New Canvas"
                Command="{Binding NewCanvasCommand}"
                InputGestureText="Ctrl+N">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="FileOutline"/>
        </MenuItem.Icon>
      </MenuItem>
      <MenuItem Header="_Open"
                Command="{Binding OpenCommand}"
                InputGestureText="Ctrl+O">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="FolderOpenOutline"/>
        </MenuItem.Icon>
      </MenuItem>
      <Separator/>
      <MenuItem Header="_Save"
                Command="{Binding SaveCommand}"
                InputGestureText="Ctrl+S">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="ContentSave"/>
        </MenuItem.Icon>
      </MenuItem>
      <MenuItem Header="Save _As"
                Command="{Binding SaveAsCommand}"
                InputGestureText="Ctrl+Shift+S">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="ContentSaveEdit"/>
        </MenuItem.Icon>
      </MenuItem>
      <MenuItem Header="_Export"
                Command="{Binding ExportCommand}"
                InputGestureText="Ctrl+E">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="Export"/>
        </MenuItem.Icon>
      </MenuItem>
      <Separator/>
      <MenuItem Header="_Import"
                Command="{Binding ImportCommand}">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="Import"/>
        </MenuItem.Icon>
      </MenuItem>
      <Separator/>
      <MenuItem Header="E_xit"
                Command="{Binding ExitCommand}"
                InputGestureText="Alt+F4">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="ExitToApp"/>
        </MenuItem.Icon>
      </MenuItem>
    </MenuItem>

    <!-- Edit Menu -->
    <MenuItem Header="_Edit">
      <MenuItem Header="_Undo"
                Command="{Binding UndoCommand}"
                InputGestureText="Ctrl+Z">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="Undo"/>
        </MenuItem.Icon>
      </MenuItem>
      <MenuItem Header="_Redo"
                Command="{Binding RedoCommand}"
                InputGestureText="Ctrl+Y">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="Redo"/>
        </MenuItem.Icon>
      </MenuItem>
      <Separator/>
      <MenuItem Header="_Cut"
                Command="{Binding CutCommand}"
                InputGestureText="Ctrl+X">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="ContentCut"/>
        </MenuItem.Icon>
      </MenuItem>
      <MenuItem Header="_Copy"
                Command="{Binding CopyCommand}"
                InputGestureText="Ctrl+C">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="ContentCopy"/>
        </MenuItem.Icon>
      </MenuItem>
      <MenuItem Header="_Paste"
                Command="{Binding PasteCommand}"
                InputGestureText="Ctrl+V">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="ContentPaste"/>
        </MenuItem.Icon>
      </MenuItem>
      <Separator/>
      <MenuItem Header="_Clear"
                Command="{Binding ClearCommand}"
                InputGestureText="Delete">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="Eraser"/>
        </MenuItem.Icon>
      </MenuItem>
      <MenuItem Header="Select _All"
                Command="{Binding SelectAllCommand}"
                InputGestureText="Ctrl+A">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="SelectAll"/>
        </MenuItem.Icon>
      </MenuItem>
    </MenuItem>

    <!-- View Menu -->
    <MenuItem Header="_View">
      <MenuItem Header="_Tool Palette"
                IsCheckable="True"
                IsChecked="{Binding IsToolPaletteVisible}"
                Command="{Binding ToggleToolPaletteCommand}">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="Toolbox"/>
        </MenuItem.Icon>
      </MenuItem>
      <MenuItem Header="_Layer Palette"
                IsCheckable="True"
                IsChecked="{Binding IsLayerPaletteVisible}"
                Command="{Binding ToggleLayerPaletteCommand}">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="Layers"/>
        </MenuItem.Icon>
      </MenuItem>
      <MenuItem Header="_Properties Panel"
                IsCheckable="True"
                IsChecked="{Binding IsPropertiesPanelVisible}"
                Command="{Binding TogglePropertiesPanelCommand}">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="Tune"/>
        </MenuItem.Icon>
      </MenuItem>
      <Separator/>
      <MenuItem Header="_Zoom In"
                Command="{Binding ZoomInCommand}"
                InputGestureText="Ctrl++">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="ZoomIn"/>
        </MenuItem.Icon>
      </MenuItem>
      <MenuItem Header="Zoom _Out"
                Command="{Binding ZoomOutCommand}"
                InputGestureText="Ctrl+-">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="ZoomOut"/>
        </MenuItem.Icon>
      </MenuItem>
      <MenuItem Header="Zoom to _Fit"
                Command="{Binding ZoomToFitCommand}"
                InputGestureText="Ctrl+0">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="FitToScreen"/>
        </MenuItem.Icon>
      </MenuItem>
      <MenuItem Header="_Actual Size"
                Command="{Binding ActualSizeCommand}"
                InputGestureText="Ctrl+1">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="Magnify"/>
        </MenuItem.Icon>
      </MenuItem>
      <Separator/>
      <MenuItem Header="_Fullscreen"
                IsCheckable="True"
                IsChecked="{Binding IsFullscreen}"
                Command="{Binding ToggleFullscreenCommand}"
                InputGestureText="F11">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="Fullscreen"/>
        </MenuItem.Icon>
      </MenuItem>
    </MenuItem>

    <!-- Tools Menu -->
    <MenuItem Header="_Tools">
      <MenuItem Header="_Brush Tool"
                Command="{Binding SelectBrushToolCommand}"
                InputGestureText="B">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="Brush"/>
        </MenuItem.Icon>
      </MenuItem>
      <MenuItem Header="_Eraser Tool"
                Command="{Binding SelectEraserToolCommand}"
                InputGestureText="E">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="Eraser"/>
        </MenuItem.Icon>
      </MenuItem>
      <MenuItem Header="_Selection Tool"
                Command="{Binding SelectSelectionToolCommand}"
                InputGestureText="M">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="SelectionDrag"/>
        </MenuItem.Icon>
      </MenuItem>
      <MenuItem Header="_Text Tool"
                Command="{Binding SelectTextToolCommand}"
                InputGestureText="T">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="FormatText"/>
        </MenuItem.Icon>
      </MenuItem>
      <Separator/>
      <MenuItem Header="_Preferences"
                Command="{Binding OpenPreferencesCommand}"
                InputGestureText="Ctrl+,">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="Settings"/>
        </MenuItem.Icon>
      </MenuItem>
    </MenuItem>

    <!-- Workspaces Menu -->
    <MenuItem Header="_Workspaces">
      <MenuItem Header="_Drawing"
                Command="{Binding SwitchToDrawingWorkspaceCommand}">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="Draw"/>
        </MenuItem.Icon>
      </MenuItem>
      <MenuItem Header="_Photo Editing"
                Command="{Binding SwitchToPhotoEditingWorkspaceCommand}">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="Image"/>
        </MenuItem.Icon>
      </MenuItem>
      <MenuItem Header="_Compositing"
                Command="{Binding SwitchToCompositingWorkspaceCommand}">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="Layers"/>
        </MenuItem.Icon>
      </MenuItem>
      <Separator/>
      <MenuItem Header="_Manage Workspaces"
                Command="{Binding ManageWorkspacesCommand}">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="ViewDashboard"/>
        </MenuItem.Icon>
      </MenuItem>
      <MenuItem Header="_Create New Workspace"
                Command="{Binding CreateNewWorkspaceCommand}">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="Plus"/>
        </MenuItem.Icon>
      </MenuItem>
      <MenuItem Header="_Reset Current Workspace"
                Command="{Binding ResetCurrentWorkspaceCommand}">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="Restore"/>
        </MenuItem.Icon>
      </MenuItem>
    </MenuItem>

    <!-- Help Menu -->
    <MenuItem Header="_Help">
      <MenuItem Header="_User Guide"
                Command="{Binding OpenUserGuideCommand}"
                InputGestureText="F1">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="HelpCircle"/>
        </MenuItem.Icon>
      </MenuItem>
      <MenuItem Header="_Keyboard Shortcuts"
                Command="{Binding ShowKeyboardShortcutsCommand}">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="Keyboard"/>
        </MenuItem.Icon>
      </MenuItem>
      <Separator/>
      <MenuItem Header="_Report Issue"
                Command="{Binding ReportIssueCommand}">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="Bug"/>
        </MenuItem.Icon>
      </MenuItem>
      <MenuItem Header="_Check for Updates"
                Command="{Binding CheckForUpdatesCommand}">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="Update"/>
        </MenuItem.Icon>
      </MenuItem>
      <Separator/>
      <MenuItem Header="_About ArtStudio"
                Command="{Binding AboutCommand}">
        <MenuItem.Icon>
          <materialDesign:PackIcon Kind="Information"/>
        </MenuItem.Icon>
      </MenuItem>
    </MenuItem>
  </Menu>

</ResourceDictionary>
