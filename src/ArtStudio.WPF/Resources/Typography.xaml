<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Override MaterialDesign typography if needed -->
  <FontFamily x:Key="MaterialDesignFont">Segoe UI</FontFamily>

  <!-- Custom text styles based on MaterialDesign -->
  <Style x:Key="ArtStudio.HeaderText"
         TargetType="TextBlock"
         BasedOn="{StaticResource MaterialDesignHeadline6TextBlock}">
    <Setter Property="Margin"
            Value="0,0,0,8"/>
  </Style>

  <Style x:Key="ArtStudio.SubheaderText"
         TargetType="TextBlock"
         BasedOn="{StaticResource MaterialDesignCaptionTextBlock}">
    <Setter Property="Margin"
            Value="0,4,0,2"/>
  </Style>
</ResourceDictionary>
