<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Override MaterialDesign color keys with ArtStudio colors -->
  <SolidColorBrush x:Key="MaterialDesignPaper"
                   Color="#FF2D2D30"/>
  <SolidColorBrush x:Key="MaterialDesignCardBackground"
                   Color="#FF3E3E42"/>
  <SolidColorBrush x:Key="MaterialDesignToolBarBackground"
                   Color="#FF3E3E42"/>
  <SolidColorBrush x:Key="MaterialDesignBody"
                   Color="#FFFFFFFF"/>
  <SolidColorBrush x:Key="MaterialDesignBodyLight"
                   Color="#FFCCCCCC"/>
  <SolidColorBrush x:Key="MaterialDesignDivider"
                   Color="#FF5A5A5C"/>

  <!-- Custom ArtStudio colors for specific use cases -->
  <SolidColorBrush x:Key="ArtStudio.Background"
                   Color="#FF1A1A1C"/>
  <SolidColorBrush x:Key="ArtStudio.Surface"
                   Color="#FF3E3E42"/>
  <SolidColorBrush x:Key="ArtStudio.OnBackground"
                   Color="#FFFFFFFF"/>
  <SolidColorBrush x:Key="ArtStudio.OnSurface"
                   Color="#FFFFFFFF"/>
  <SolidColorBrush x:Key="ArtStudio.OnSurfaceVariant"
                   Color="#FFCCCCCC"/>
  <SolidColorBrush x:Key="ArtStudio.Primary"
                   Color="#FF007ACC"/>
  <SolidColorBrush x:Key="ArtStudio.Border"
                   Color="#FF5A5A5C"/>
  <SolidColorBrush x:Key="ArtStudio.Grid"
                   Color="#FF252526"/>
</ResourceDictionary>
